@model AppointmentCreateVM

@{
    ViewBag.Title = "Create appointment";
}

    <h1>Create appointment</h1>

    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>


       
    </head>



<div class="container">
    <form method="post" asp-action="AddAppointment">


        <div class="col-sm-6" style="height:auto;">
            <div class="form-group">

                <label asp-for="@Model.AppointmentDay">Select the day</label>
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' asp-for="@Model.AppointmentDay" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar" asp-validation-for="@Model.AppointmentDay"></span> @*ovo sam promijenio u date*@
                    </span>
                </div>
                <br />

                <label asp-for="@Model.AppointmentStart">Select the starting time</label>
                <div class='input-group date' id='datetimepicker2'>
                    <input type='text' asp-for="@Model.AppointmentStart" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time" asp-validation-for="@Model.AppointmentStart"></span>
                    </span>
                </div>

                <label asp-for="@Model.AppointmentEnd">Select the ending time</label>
                <div class='input-group date' id='datetimepicker3'>
                    <input type='text' asp-for="@Model.AppointmentEnd" class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time" asp-validation-for="@Model.AppointmentEnd"></span>
                    </span>
                </div>
                <br />

                <label asp-for="@Model.Title">Title</label>
                <div>
                    <textarea rows="2" asp-for="@Model.Title"></textarea>
                    <span asp-validation-for="@Model.Title"></span>
                </div>
                <br />

                <label asp-for="@Model.ProcedureDescription">Procedure</label>
                <div>
                    <textarea rows="5" class="form-control" asp-for="@Model.ProcedureDescription"></textarea>
                    <span asp-validation-for="@Model.ProcedureDescription"></span>
                </div>              

                </div>
             </div>


