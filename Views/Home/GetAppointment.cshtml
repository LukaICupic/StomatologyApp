@model Appointment

@{
    ViewBag.Title = "Appointment";
}
<form method="post">
    <div class="card m-3">
        <div class="card-header">
            <h4>@Model.Title</h4>
            <h5>@Model.Customer.Name</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.AppointmentProcedures</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.ProcedureDescription</h6>
            <h6>@Model.AppointmentStart - @Model.AppointmentEnd</h6>
        </div>
        <div class="card-footer">
            <button type="submit" asp-action="AppointmentCanceled" asp-route-id="@Model.AppointmentId" class="btn btn-primary">
                Canceled appointment
            </button>
            <button type="submit" asp-action="DeleteAppointment" asp-route-id="@Model.AppointmentId" class="btn btn-primary"
                    onclick="return confirm(`Are you sure you want to delete this appointment? If it's been canceled or the customer did not come please use` +
                    ` the 'Canceled appointment' button.`)">
                Obrisati
            </button>
        </div>
    </div>
</form>
