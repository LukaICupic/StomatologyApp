@model StomatologyApp.Models.AppointmentVM.AppointmentSeeVM

@{
    ViewBag.Title = "Appointment";
}
<form method="post">
    <div class="card m-3">
        <div class="card-header">
            <h4>@Model.Title</h4>
            <h5>@Model.CustomerName</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title">@Model.AppointmentProcedures</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.ProcedureDescription</h6>
            <h6>@Model.AppointmentStart.Hour - @Model.AppointmentEnd.Hour</h6>
        </div>
        <div class="card-footer">
            <button disabled type="submit" asp-action="AppointmentCanceled" asp-route-id="@Model.AppointmentId" class="btn btn-primary">
                Cancel appointment
            </button>
            <button disabled type="submit" asp-action="DeleteAppointment" asp-route-id="@Model.AppointmentId" class="btn btn-primary"
                    onclick="return confirm(`Are you sure you want to delete this appointment? If it's been canceled or the customer did not come please use` +
                    ` the 'Canceled appointment' button.`)">
                Delete
            </button>
            <a href="#" @*asp-action="EditAppointment" asp-route-id="@Model.AppointmentId"*@ class="btn btn-primary">
            Edit
            </a>
        </div>
    </div>
</form>
